{
  "name": "panpal-backend",
  "version": "1.0.0",
  "description": "Firebase backend for PanPal - AI-powered meal planning app",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
